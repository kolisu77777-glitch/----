{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/user/login", "dest": "/api/index.js" },
    { "src": "/generate", "dest": "/api/index.js" },
    { "src": "/ask", "dest": "/api/index.js" },
    { "src": "/daily-theme", "dest": "/api/index.js" },
    { "src": "/verify-connection", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/client/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}